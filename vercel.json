{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.+\\.[a-z]+)$", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
} 